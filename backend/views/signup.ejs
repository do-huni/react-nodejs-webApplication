<title>Todo App</title>
</head>
<body>
	<%-include('nav.html')%>
<div class = "container">
	<form>
	  <div class="form-group">
		<label for="idInput">ID</label>
		<input type="text" class="form-control" name = "id" id = "id">
		<small class="form-text text-muted">4-12자, 영어 / 숫자 포함</small>
		<button type="button" id = "check" class="btn btn-secondary btn-lg btn-block">중복 확인</button>
		  
	  </div>
	  <div class="form-group">
		<label>Password</label>
		<input type="password" class="form-control" name="pw" id = "pw">
		<small class="form-text text-muted">8~14자, 영어 / 숫자 / 특수문자 포함</small>		  
	  </div>
	  <div class="form-group">
		<label>Password Again</label>
		<input type="password" class="form-control" name="repw" id = "repw">
	  </div>		

	  <button type="button" class="btn btn-primary btn-lg btn-block submit">제출하기</button>
	</form>
	<div class="container">
		<p class = "mt-3">이미 계정을 갖고 계신가요? <a href="./login">지금 로그인하기</a></p>
	</div>	
</div>
<script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.min.js"></script>
	
<script>
	$(".submit").click(function(e){
		const id = $('#id').val();
		const pw = $('#pw').val();
		const repw = $('#repw').val();		
		if(id.length<4 || id.length >12) {alert("적합하지 않은 아이디입니다.")}
		else if(pw.length<8 || pw.length >14) {alert("적합하지 않은 비밀번호입니다.")}
		else if(pw != repw) {alert("비밀번호가 일치하지 않습니다.")}
		else{
			$.ajax({
				url: '/signup',
				method: 'POST',
				data: {
					id: id,
					pw: pw
				}
			}).done(result =>{
				alert("정상적으로 회원가입 되었습니다!");
				$(location).attr('href', '/login');
			});
		}
	});
	
	$("check").click(function(e){
		const id = $('id').val();
	});	
</script>

